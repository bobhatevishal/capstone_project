pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/bobhatevishal/capstone_project.git'
            }
        }
        stage('Build') {
            steps {
                sh 'echo "Building Application...."'
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Running Tests..."'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo "Deploy step placeholder..."'
            }
        }
    }
}
