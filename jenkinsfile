pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                // Use credentialsId for GitHub token authentication
                git branch: 'main', 
                    url: 'https://github.com/bobhatevishal/capstone_project.git', 
                    credentialsId: 'githubcredentials'
            }
        }
        stage('Build') {
            steps {
                sh 'echo "Building Application...."'
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Running Tests..."'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo "Deploy step placeholder.."'
            }
        }
    }
}
